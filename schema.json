{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bus Route",
  "description": "A bus route with its stops and waypoints in the Davao Interim Bus System",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "UUID7 identifier for the route. NEVER modify this after creation."
    },
    "route_number": {
      "type": "string",
      "pattern": "^[A-Z][0-9]{3}$",
      "description": "Official route number (e.g., R102, Z999)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable route name (e.g., 'Toril to GE Torres')"
    },
    "area": {
      "type": "string",
      "enum": ["Toril", "Mintal", "Bangkal", "Buhangin", "Panacan"],
      "description": "Geographic area the route originates from"
    },
    "time_period": {
      "type": "string",
      "enum": ["AM", "PM"],
      "description": "Time period: AM (morning) or PM (afternoon)"
    },
    "color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$",
      "description": "Hex color code for the route (e.g., #430dac)"
    },
    "start_time": {
      "type": "string",
      "pattern": "^[0-2][0-9]:[0-5][0-9]$",
      "description": "Operating hours start in 24-hour format (e.g., 06:00)"
    },
    "end_time": {
      "type": "string",
      "pattern": "^[0-2][0-9]:[0-5][0-9]$",
      "description": "Operating hours end in 24-hour format (e.g., 10:00)"
    },
    "points": {
      "type": "array",
      "minItems": 2,
      "description": "Route points in sequence order: named bus stops and intermediate waypoints",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
            "description": "UUID7 identifier for the point. NEVER modify this after creation."
          },
          "name": {
            "type": "string",
            "description": "Stop name as displayed on signage. Can be empty for waypoints."
          },
          "latitude": {
            "type": "number",
            "minimum": 6.9,
            "maximum": 7.2,
            "description": "Latitude in decimal degrees (Davao City range: 6.9-7.2)"
          },
          "longitude": {
            "type": "number",
            "minimum": 125.4,
            "maximum": 125.7,
            "description": "Longitude in decimal degrees (Davao City range: 125.4-125.7)"
          },
          "kind": {
            "type": "string",
            "enum": ["stop", "waypoint"],
            "default": "stop",
            "description": "Point kind: 'stop' for named bus stops, 'waypoint' for intermediate points used for route snapping."
          }
        },
        "required": ["id", "name", "latitude", "longitude"],
        "additionalProperties": false
      }
    }
  },
  "required": ["id", "route_number", "name", "area", "time_period", "color", "start_time", "end_time", "points"],
  "additionalProperties": false
}
